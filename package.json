{
  "name": "@turtlepay/logger",
  "version": "0.0.1",
  "description": "TurtlePay Logger Helper Library",
  "main": "dist/Logger.js",
  "types": "dist/Logger.d.ts",
  "scripts": {
    "preinstall": "node -e \"if (process.env.npm_execpath.indexOf('yarn') === -1) throw new Error('Use yarn for installing: https://yarnpkg.com/en/docs/install')\"",
    "build": "./node_modules/.bin/tsc",
    "docs": "./node_modules/.bin/typedoc && touch docs/.nojekyll && git restore docs/CNAME",
    "test": "yarn style",
    "style": "./node_modules/.bin/eslint src/**/*.ts",
    "fix-style": "./node_modules/.bin/eslint --fix src/**/*.ts",
    "prepublishOnly": "yarn build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/turtlepay/logger.git"
  },
  "keywords": [
    "TurtlePay",
    "logger",
    "Helper"
  ],
  "author": "The TurtlePay Developers",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/turtlepay/logger/issues"
  },
  "homepage": "https://github.com/turtlepay/logger#readme",
  "devDependencies": {
    "@types/node": "^14.11.1",
    "@typescript-eslint/eslint-plugin": "^4.2.0",
    "@typescript-eslint/parser": "^4.2.0",
    "eslint": "^7.9.0",
    "eslint-config-standard": "^14.1.1",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.0.1",
    "typedoc": "^0.19.2",
    "typescript": "^4.0.3"
  },
  "dependencies": {
    "winston": "^3.3.3"
  }
}
